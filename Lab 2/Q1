def character_locator(string, letter):
    positions = []

    for index, char in enumerate(string):
        if char == letter:
            positions.append(index)

    return positions


string = input("Enter the string to search: ")

letter = input("Enter the letter to find positions of: ")

positions = character_locator(string, letter)

print(f"The positions of '{letter}' in the given string are: {positions}")
